<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/search_note_src"
        android:layout_width="30dp"
        android:layout_height="50dp"
        app:srcCompat="@mipmap/note"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="18dp"
        />

    <TextView
        android:id="@+id/search_note"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:hint="无标题页"
        android:paddingLeft="5dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/search_note_src"/>

    <TextView
        android:id="@+id/search_note_address"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:textSize="10sp"
        android:gravity="center_vertical"
        android:hint="我的笔记本>>快速笔记>>无标题页"
        android:paddingLeft="5dp"
        android:textColor="@color/color_gray_word"
        android:textColorHint="@color/textColor"
        app:layout_constraintTop_toBottomOf="@+id/search_note"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/search_note_src"/>


</android.support.constraint.ConstraintLayout>