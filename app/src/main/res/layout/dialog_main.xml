<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/dialog_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="笔记本名称"
        android:textSize="16sp"
        android:maxLength="10"
        />

    <Button
        android:id="@+id/dialog_ok"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="创建"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_et"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_et" />

    <Button
        android:id="@+id/dialog_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toStartOf="@+id/dialog_ok"
        app:layout_constraintRight_toLeftOf="@+id/dialog_ok"
        app:layout_constraintTop_toTopOf="@+id/dialog_ok" />

</android.support.constraint.ConstraintLayout>